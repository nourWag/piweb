                <td>{{ entity.telephone }}</td>
        
                <td>
                <ul>
                    <li>
                        <a href="{{ path('liraisonf_showliv', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('supprimerliv', { 'id': entity.id }) }}">supprimer</a>
                    </li> 
                </ul>
                </td>
            </tr>
        {% endfor %}
